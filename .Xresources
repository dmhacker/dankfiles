! WINDOW CONFIGURATION

Xft.dpi: 144
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! URXVT CONFIGURATION

URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true
URxvt*scrollBar: false

! Standard fonts
URxvt*font: xft:Source Code Pro:size=12
URxvt*letterSpace: -1

! Save up to the last 10000 lines (you can scroll up to view them)
URxvt*saveLines: 10000

! Disable Perl extension feature
URxvt*perl-ext:
URxvt*perl-ext-common:

! Colors shamelessly ripped from the aci theme from Gogh
URxvt*background: #0d1926
URxvt*foreground: #b4e1fd
URxvt*color01: #363636
URxvt*color02: #ff0883
