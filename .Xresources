! URXVT CONFIGURATION

URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true
URxvt.scrollBar: false

! Standard fonts
URxvt.font: xft:SauceCodePro Nerd Font:size=11:dpi=196

! Save up to the last 10000 lines (you can scroll up to view them)
URxvt.saveLines: 10000

! Perl extension features
URxvt.perl-ext-common: default,clipboard,keyboard-select,resize-font
URxvt.keyboard-select.clipboard: true

! Keyboard bindings for Perl extensions
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.M-Up: resize-font:bigger
URxvt.keysym.M-Down: resize-font:smaller

