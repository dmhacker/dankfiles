[module/wireless-network]
type = internal/network
interface = wlp1s0 
interval = 3
ping-interval = 10

format-connected = <label-connected>
format-connected-prefix="  "   
format-connected-underline = ${colors.base}
label-connected = %essid%

format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.base}
label-disconnected = Wifi Disconnected
label-disconnected-foreground = ${colors.foreground-alt}

[module/wifi-network]
type = internal/network
interface = enp0s20f0u1u1u2
interval = 3

format-connected-prefix = "  "
format-connected-underline = ${colors.base}
label-connected = %local_ip%

[module/date]
type = internal/date
interval = 1

date = %%{F#777}%m-%d-%Y%%{F-}  %%{F#fff}%I:%M %p%%{F-}
date-alt = %%{F#fff}%A  |  %B %d, %Y  |  %%{F#fff}%I:%M:%S %p%%{F-}

format-underline = ${colors.base}
format-prefix = "  "

[module/powermenu]
type = custom/menu

label-open = "  " 
label-close = "  "
label-separator = "     "

menu-0-0 = Hibernate 
menu-0-0-foreground = ${colors.base}
menu-0-0-exec = systemctl hibernate
menu-0-1 = Reboot
menu-0-1-foreground = ${colors.base} 
menu-0-1-exec = reboot
menu-0-2 = Shutdown 
menu-0-2-foreground = ${colors.base} 
menu-0-2-exec = shutdown -h now 

